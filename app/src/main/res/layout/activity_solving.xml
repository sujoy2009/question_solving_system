<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".chooser">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:hint="  Write  ans"
            android:background="@drawable/edit"
            android:id="@+id/aboutpicsid"
            android:inputType="textMultiLine"
            android:maxLines="4"


            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit"

            android:hint="  passward"
            android:id="@+id/pinsid"
            android:inputType="text"


            />
        <Button
            android:layout_width="200dp"


            android:layout_height="40dp"
            android:id="@+id/chosesid"
            android:text="Add a Photo"

            />

        <ImageView
            android:layout_width="match_parent"


            android:layout_height="400dp"
            android:id="@+id/picsid"/>
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/psid"



            android:layout_weight=".2"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="2dp"

            android:textSize="20dp"
            android:text="submit"
            android:id="@+id/savesid"

            android:background="@drawable/buttonp"
            />






    </LinearLayout>



</LinearLayout>